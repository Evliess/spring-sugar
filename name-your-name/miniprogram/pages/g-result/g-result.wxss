.container {
  display: flex;
  flex-direction: column;
  padding: 0 4px 0 4px;
  margin-top: 1rem;
}

.scroll-view {
  height: 90vh - 60px;
  border: 1px solid #E0E0E0;
  border-radius: 8px;
}

.answer {
  margin-top: 4px;
}

.button-container {
  display: flex;
  padding: 14px;
  width: 100%;
}

.btn-edit {
  margin-left: 14px !important;
}

.btn-req {
  margin-right: 14px !important;
}

.wait-indictor {
  margin: 10px 0 10px 6px;
  height: 30px;
}

.hide {
  visibility: hidden;
}

.show {
  display: inline-block;
  visibility: visible;
}