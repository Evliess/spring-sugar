.card-head {
  text-align: center;
}

.custom-name .card,.custom-name .msg{
  margin: 0 4px 0 16px;
}

.textarea {
  flex: 1;
  border: 0px solid #ddd;
  border-radius: 4px;
  padding: 8px;
  font-size: 14px;
  min-height: 18px;
}

.card-footer {
  padding: 4px 0;
  display: flex;
}

.bottom-text {
  position: absolute;
  bottom: 20px; 
  left: 20%; 
  transform: translateX(-20%);
  font-size: 14px;
}

.answer {
  height: 90%;
  padding: 12px;
}

.lds-ellipsis,
.lds-ellipsis view {
  box-sizing: border-box;
}
.lds-ellipsis {
  display: inline-block;
  position: relative;
  width: 40px;
  height: 40px;
}
.lds-ellipsis view {
  position: absolute;
  top: 33.33333px;
  width: 13.33333px;
  height: 13.33333px;
  border-radius: 50%;
  background: linear-gradient(to right, #3b71ca, lightgreen);
  animation-timing-function: cubic-bezier(0, 1, 1, 0);
}
.lds-ellipsis view:nth-child(1) {
  left: 8px;
  animation: lds-ellipsis1 0.6s infinite;
  
}
.lds-ellipsis view:nth-child(2) {
  left: 8px;
  animation: lds-ellipsis2 0.6s infinite;
}
.lds-ellipsis view:nth-child(3) {
  left: 32px;
  animation: lds-ellipsis2 0.6s infinite;
}
.lds-ellipsis view:nth-child(4) {
  left: 56px;
  animation: lds-ellipsis3 0.6s infinite;
}
@keyframes lds-ellipsis1 {
  0% {
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes lds-ellipsis3 {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0);
  }
}
@keyframes lds-ellipsis2 {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(24px, 0);
  }
}

