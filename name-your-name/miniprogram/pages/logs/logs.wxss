page {
  height: 100vh;
}

.scrollarea-log .card {
  margin: 0 4px 0 16px;
}

.card-head {
  text-align: center;
}

.card-text {
  margin-bottom: 4px;
}

.user-input .card {
  border: 0px solid #1976D2;
  /* box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1); */
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.1);
}

.card-text {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  font-size: 14px; /* 设置文本大小 */
  color: #333; /* 设置文本颜色 */
}

.card-text icon {
  margin-right: 8px; /* 图标和文本之间的间距 */
}

.card-row {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 4px;
}

/* 标签样式 */
.label {
  font-size: 14px;
  color: #333;
  margin-right: 8px;
}

/* 输入框样式 */
.input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 8px;
  font-size: 14px;
}

.radio-item {
  margin-right: 16px;
  font-size: 14px;
  color: #333;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid transparent;
  border-bottom: .5px solid transparent;
  border-image: linear-gradient(to right, #1976D2, #1976D2);
  border-image-slice: 1;
  color: black;
  border-top: 0px solid transparent;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.card-footer {
  padding: 16px 0;
  display: flex;
  justify-content: flex-start;
}

button.align-right {
    width: 30vw;
    height: 10vw;
    font-size: 16px;
}
