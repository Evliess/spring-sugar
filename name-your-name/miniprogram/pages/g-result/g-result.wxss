.container {
  display: flex;
  flex-direction: column;
  height: 90vh;
  padding: 0 4px 0 4px;
  margin-top: 1rem;
}

.scroll-view {
  height: calc(100vh - 100px);
  border: 1px solid #E0E0E0;
  border-radius: 8px;
}

.answer {
  height: 90%;
  padding: 12px;
}

.button-container {
  height: 30px; 
  display: flex;
  padding: 14px;
  width: 100%;
}

.btn-edit {
  margin-left: 14px !important;
}

.btn-req {
  margin-right: 14px !important;
}