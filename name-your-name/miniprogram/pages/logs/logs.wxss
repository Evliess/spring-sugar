page {
  height: 100vh;
}

.scrollarea-log .card {
  margin: 0 4px 0 16px;
}

.card-head {
  text-align: center;
}

.card-text {
  margin-bottom: 4px;
}

.user-input .card {
  border: 0px solid #1976D2;
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.1);
  font-size: 18px;
  border-radius: 0px;
}

.card-text {
  display: flex;
  align-items: center;
  font-size: 15px; 
  font-weight: 500;
  color: #778ec9;
}

.card-text icon {
  margin-right: 8px; /* 图标和文本之间的间距 */
  color: #778ec9;
}

.card-row {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 4px;
}

.radio-item {
  margin-right: 16rpx;
  font-size: 18px;
  color: #333;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 0px 32rpx;
  box-sizing: border-box;
  border-top: .5px solid transparent;
  border-bottom: .5px solid transparent;
  border-image: linear-gradient(to right, #1976D2, #1976D2);
  border-image-slice: 1;
  color: black;
  border-top: 0px solid transparent;
  height: 52px;
  line-height: 52px;
}

text.label-name, text.label-star, text.label-sex {
  letter-spacing: 2px;
}

.nickname-wrapper input, .nickname-wrapper text {
  height: 52px;
  line-height: 52px;
}

.nickname-label {
  width: 210rpx;
  height: 52px;
  line-height: 52px;
}

.nickname-input {
  flex: 1;
}

.card-body {
  padding: 12px 0px 12px 4px;
}

.card-footer {
  margin-top: 20px;
}

button.align-right {
    width: 160px;
    height: 50px;
    font-size: 22px;
}

.wait-indictor {
  margin-top: 16px;
  margin-left: 6px;
  height: 30px;
}

.hide {
  visibility: hidden;
}

.show {
  display: inline-block;
  visibility: visible;
}

