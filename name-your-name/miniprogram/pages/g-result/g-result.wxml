<!-- pages/myPage/myPage.wxml -->
<view class="container">
  <!-- 上半部分：scroll-view -->
  <scroll-view class="scroll-view" scroll-y>
    <view class="answer">
      <towxml nodes="{{answer}}" />
    </view>
  </scroll-view>

  <!-- 下半部分：两个按钮 -->
  <view class="button-container">
    <button style="width:20vw;" class="btn btn-blue btn-edit" bind:tap="editInput">返回修改</button>
    <button style="width:20vw;" class="btn btn-blue btn-req" bind:tap="sendRequest">再来一组</button>
  </view>
</view>