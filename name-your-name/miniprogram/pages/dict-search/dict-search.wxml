<view class="container">
  <view class="line-1">
    <input class="name-input" placeholder="可按首字母筛选，例如：A" bind:change="onNameChange" placeholder-class="placeholder-class"/>
    <button style="width:80px;" class="btn btn-primary btn-search" bind:tap="sendRequest">筛选</button>
  </view>

  <view class="card">
    <view class="card-body">
      <scroll-view scroll-y>
        <view class="answer">
          <towxml nodes="{{answer}}" />
        </view>
      </scroll-view>
    </view>
  </view>


</view>