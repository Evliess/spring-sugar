<!-- pages/myPage/myPage.wxml -->
<view class="container">
  <!-- 上半部分：scroll-view -->
  <scroll-view class="scroll-view" scroll-into-view="{{anchor}}" scroll-y>
    <view id="topAnchor"></view>
    <view class="answer">
      <towxml nodes="{{answer}}" />
    </view>
  </scroll-view>

  <view class="{{showIndictor?'show wait-indictor':'hide wait-indictor'}}">
    <loading-spiner id="loadingIcon"></loading-spiner>
  </view>
  <!-- 下半部分：两个按钮 -->
  <view class="button-container">
    <button disabled="{{showIndictor}}" style="width:100px; height: 48px; font-size: 20px;" class="btn btn-purple btn-edit" bind:tap="editInput">返回修改</button>
    <button disabled="{{showIndictor}}" style="width:50px; height: 48px; font-size: 20px;" class="btn btn-purple btn-history" bind:tap="viewHistory"><image class="icon" src="{{historyIcon}}"></image></button>
    <button disabled="{{showIndictor}}" style="width:100px; height: 48px; font-size: 20px;" class="btn btn-purple btn-req" bind:tap="sendRequest">再来一组</button>
  </view>
</view>