/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 90%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 10px;
  margin-bottom: 20px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper, .birthday-wrapper, 
.birthtime-wrapper, .sex-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid transparent;
  border-bottom: .5px solid transparent;
  border-image: linear-gradient(to right, #3b71ca, lightgreen);
  border-image-slice: 1;
  color: black;
}

.nickname-wrapper {
  border-top: 0px solid transparent;
}

.answer-wrapper {
  display: block;
  width: 90%;
  padding: 0px 4px 40px 4px;
}

.nickname-label, .birthday-label, 
.birthtime-label, .sex-label {
  width: 105px;
}

.nickname-input, .birthday-input, 
.birthtime-input, .sex-input {
  flex: 1;
}
