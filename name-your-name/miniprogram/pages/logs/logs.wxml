<scroll-view class="scrollarea-log" scroll-y type="list">
  <text class="card-head">英文名定制专线</text>
  <view class="card">
    <view class="card-body">
      <view class="card-text">
        <icon type="info" size="20"></icon><text class="card-text-icon">设置取名要求，精准定制最适合你的英文名</text>
      </view>
      <view class="card-text">
        <icon type="info" size="20"></icon><text class="card-text-icon">单次推荐4个英文名，可多次调整条件重新推荐</text>
      </view>
    </view>
  </view>

  <view class="spliter"></view>
  <view class="user-input">
    <view class="card">
      <view class="nickname-wrapper">
        <text class="nickname-label">名字</text>
        <input class="nickname-input" placeholder="可输入全名/ 姓氏/ 名字" bind:change="onNameChange" value="{{userInput.name}}"/>
      </view>
      <view class="nickname-wrapper">
        <text class="nickname-label">性别：</text>
        <radio-group bindchange="onSexChange">
          <label class="radio-item">
            <radio value="{{userInput.sex}}" checked="{{userInput.sex === '男'}}" /> 男
          </label>
          <label class="radio-item">
            <radio value="{{userInput.sex}}" checked="{{userInput.sex === '女'}}" /> 女
          </label>
          <label class="radio-item">
            <radio value="{{userInput.sex}}" checked="{{userInput.sex === '中性'}}" /> 中性
          </label>
        </radio-group>
      </view>
      <view class="nickname-wrapper">
        <text class="nickname-label">星座</text>
        <input class="nickname-input" placeholder="也可输入MBTI" bind:change="onStarChange" value="{{userInput.mbti}}" />
      </view>
      <view class="nickname-wrapper">
        <text class="nickname-label">期望寓意</text>
        <input class="nickname-input" placeholder="如 甜美、沉稳、帅气" bind:change="onMeaningChange" value="{{userInput.meaning}}" />
      </view>
      <view class="nickname-wrapper">
        <text class="nickname-label">其他要求</text>
        <input class="nickname-input" placeholder="如 A开头、小众、好听" bind:change="onOtherChange" value="{{userInput.other}}" />
      </view>
      <view class="nickname-wrapper">
        <text class="nickname-label">是否需要和中文发音一致</text>
        <radio-group bindchange="onVoiceChange">
          <label class="radio-item">
            <radio value="{{userInput.voice}}" checked="{{userInput.voice === '是'}}" /> 是
          </label>
          <label class="radio-item">
            <radio value="{{userInput.voice}}" checked="{{userInput.voice === '否'}}" /> 否
          </label>

        </radio-group>
      </view>
    </view>
    <view class="card-footer"><button style="width:30vw;" class="align-right btn btn-primary" bind:tap="toCustomName">激活定制取名</button></view>
  </view>

</scroll-view>