page {
  height: 100vh;
}

.scrollarea-log .card {
  margin: 0 4px 0 16px;
}

.card-head {
  text-align: center;
}

.card-text {
  margin-bottom: 4px;
}

.user-input .card {
  border: 0px solid #1976D2;
  /* box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1); */
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.1);
}

.card-text {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  font-size: 28rpx; /* 设置文本大小 */
  color: #333; /* 设置文本颜色 */
}

.card-text icon {
  margin-right: 8px; /* 图标和文本之间的间距 */
}

.card-row {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 4px;
}

/* 标签样式 */
.label {
  font-size: 14px;
  color: #333;
  margin-right: 8px;
}

/* 输入框样式 */
.input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 8px;
  font-size: 14px;
}

.radio-item {
  margin-right: 16rpx;
  font-size: 14px;
  color: #333;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 10rpx 32rpx;
  box-sizing: border-box;
  border-top: .5px solid transparent;
  border-bottom: .5px solid transparent;
  border-image: linear-gradient(to right, #1976D2, #1976D2);
  border-image-slice: 1;
  color: black;
  border-top: 0px solid transparent;
}

.nickname-wrapper input {
  height: 80rpx;
}
.nickname-wrapper .sex-group {
  margin-top: 8px;
  height: 70rpx;
}

.nickname-wrapper .voice-group {
  margin-top: 14px;
  height: 70rpx;
}
.nickname-label {
  width: 210rpx;
  padding-top: 16rpx;
}

.nickname-input {
  flex: 1;
}

.card-body {
  padding: 12px 0px 12px 4px;
}

.card-footer {
  padding: 16px 0 0 0;
  display: flex;
  justify-content: flex-start;
}

button.align-right {
    width: 120px;
    height: 40px;
    font-size: 16px;
}

.lds-ellipsis,
.lds-ellipsis view {
  box-sizing: border-box;
}
.lds-ellipsis {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 20px;
}
.lds-ellipsis view {
  position: absolute;
  top: 8px;
  width: 8.33333px;
  height: 8.33333px;
  border-radius: 50%;
  background: linear-gradient(to right, #3b71ca, lightgreen);
  animation-timing-function: cubic-bezier(0, 1, 1, 0);
}
.lds-ellipsis view:nth-child(1) {
  left: 8px;
  animation: lds-ellipsis1 0.6s infinite;
}
.lds-ellipsis view:nth-child(2) {
  left: 8px;
  animation: lds-ellipsis2 0.6s infinite;
}
.lds-ellipsis view:nth-child(3) {
  left: 32px;
  animation: lds-ellipsis2 0.6s infinite;
}
.lds-ellipsis view:nth-child(4) {
  left: 56px;
  animation: lds-ellipsis3 0.6s infinite;
}

@keyframes lds-ellipsis1 {
  0% {
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes lds-ellipsis3 {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0);
  }
}
@keyframes lds-ellipsis2 {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(24px, 0);
  }
}
